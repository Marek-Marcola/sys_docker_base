ARG FROM
FROM $FROM

ARG DATE
ARG FROM
ARG REPO
ARG VER

LABEL info.from="$FROM"
LABEL info.name="$REPO:$VER"
LABEL info.date="$DATE"

ENV INFO_DATE=$DATE INFO_REPO=$REPO INFO_VER=$VER INFO_FROM=$FROM
ENV PATH /usr/local/cups-$VER/bin:/usr/local/cups-$VER/sbin:$PATH

RUN set -ex;\
  curl -sS -L -k -f http://repo/sw/opensource/cups/bin/cups-$VER-$OS_NAME-$OS_ARCH.tar.gz | tar xzf - -C /usr/local;\
  cd /usr/local;\
  ln -snfv cups-$VER cups;\
  mkdir -pv /usr/local/etc/cups;\
  cups-config --version;

RUN set -ex;\
 (echo "info.date = $DATE";\
  echo "info.name = $REPO:$VER";\
  echo "info.from = $FROM";\
 ) > /version.d/version-$REPO.txt;

ADD config/cupsd.conf config/cups-files.conf /usr/local/etc/cups/

ADD scripts/[0-9]*.sh /cmd.d/
CMD ["/cmd.sh"]
