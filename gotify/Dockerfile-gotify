ARG FROM
FROM $FROM

ARG DATE
ARG FROM
ARG REPO
ARG VER

LABEL info.from="$FROM"
LABEL info.name="$REPO:$VER"
LABEL info.date="$DATE"

ENV INFO_DATE=$DATE INFO_REPO=$REPO INFO_VER=$VER INFO_FROM=$FROM
ENV PATH /usr/local/gotify-$VER:$PATH

RUN set -ex;\
  groupadd -g 666 none;\
  useradd -u 666 -g 666 -m none;\
  mkdir -pv /var/opt/gotify;\
  chown none:none /var/opt/gotify;\
  mkdir -pv /usr/local/gotify-$VER;\
  V=$(curl -s http://repo/sw/opensource/gotify/bin/version.txt | grep ^gotify-cli: | awk '{print $2}');\
  curl -sS -L -k -f -o /usr/local/gotify-$VER/gotify-cli http://repo/sw/opensource/gotify/bin/gotify-cli-$V-linux-amd64;\
  chmod a+x /usr/local/gotify-$VER/gotify-cli;\
  curl -sS -L -k -f -o /tmp/f.zip http://repo/sw/opensource/gotify/bin/gotify-$VER-linux-amd64.zip;\
  unzip -d /usr/local/gotify-$VER /tmp/f.zip;\
  rm -f /tmp/f.zip;\
  chown -R root:root /usr/local/gotify-$VER;\
  cd /usr/local/gotify-$VER;\
  ln -snfv gotify-linux-amd64 gotify;\
  cd /usr/local;\
  ln -snfv gotify-$VER gotify;

RUN set -ex;\
 (echo "info.date = $DATE";\
  echo "info.name = $REPO:$VER";\
  echo "info.from = $FROM";\
 ) > /version.d/version-$REPO.txt;

ADD scripts/[0-9]*.sh /cmd.d/
CMD ["/cmd.sh"]
