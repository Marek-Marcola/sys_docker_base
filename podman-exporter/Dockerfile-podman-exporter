ARG FROM
FROM $FROM

ARG DATE
ARG FROM
ARG REPO
ARG VER

LABEL info.from="$FROM"
LABEL info.name="$REPO:$VER"
LABEL info.date="$DATE"

ENV INFO_DATE=$DATE INFO_REPO=$REPO INFO_VER=$VER INFO_FROM=$FROM
ENV PATH /usr/local/podman-exporter-$VER:$PATH

RUN set -ex;\
  export DEBIAN_FRONTEND=noninteractive;\
  apt-get update;\
  apt-get -yqq --allow-downgrades install libgpgme-dev libbtrfs-dev libdevmapper-dev libassuan-dev;\
  apt-get clean;\
  cd /usr/local;\
  mkdir -pv podman-exporter-$VER;\
  curl -sS -L -k -f http://repo/sw/opensource/prometheus/bin/podman-exporter-$VER-linux-amd64.tar.gz | tar xvzf - --strip-components=1 -C podman-exporter-$VER;\
  chown -R root:root /usr/local/podman-exporter-$VER;\
  ln -snfv podman-exporter-$VER podman-exporter;\
  podman-exporter --version || true;

RUN set -ex;\
 (echo "info.date = $DATE";\
  echo "info.name = $REPO:$VER";\
  echo "info.from = $FROM";\
 ) > /version.d/version-$REPO.txt;

ADD scripts/[0-9]*.sh /cmd.d/
CMD ["/cmd.sh"]
