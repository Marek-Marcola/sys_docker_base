ARG FROM
FROM $FROM

ARG DATE
ARG FROM
ARG REPO
ARG VER

LABEL info.from="$FROM"
LABEL info.name="$REPO:$VER"
LABEL info.date="$DATE"

ENV INFO_DATE=$DATE INFO_REPO=$REPO INFO_VER=$VER INFO_FROM=$FROM
ENV PATH /usr/local/vdbench-$VER:/var/opt/vdbench:$PATH

RUN set -ex;\
  mkdir -pv /work;\
  cd /usr/local;\
  mkdir -pv vdbench-$VER;\
  curl -sS -L -k -f -o /tmp/f.zip http://repo/sw/oracle/vdbench/vdbench-$VER.zip;\
  unzip -d /usr/local/vdbench-$VER /tmp/f.zip;\
  chown -R root:root /usr/local/vdbench-$VER;\
  rm -fv /tmp/f.zip;\
  ln -snfv vdbench-$VER vdbench;

ADD scripts/*.sh scripts/*.conf /var/opt/vdbench/
WORKDIR /work

RUN set -ex;\
 (echo "info.date = $DATE";\
  echo "info.name = $REPO:$VER";\
  echo "info.from = $FROM";\
 ) > /version.d/version-$REPO.txt;
