ARG FROM
FROM $FROM

ARG DATE
ARG FROM
ARG REPO
ARG VER

LABEL info.from="$FROM"
LABEL info.name="$REPO:$VER"
LABEL info.date="$DATE"

ENV INFO_DATE=$DATE INFO_REPO=$REPO INFO_VER=$VER INFO_FROM=$FROM

RUN set -ex;\
  [ "$(id -g none)" = "" ] && groupadd -g 666 none;\
  [ "$(id -u none)" = "" ] && useradd -u 666 -g 666 -s /bin/bash -m none;\
  cd /usr/local;\
  mkdir -pv zipkin-$VER;\
  ln -snfv zipkin-$VER zipkin;\
  curl -sS -L -k -f -o zipkin/zipkin-server-$VER-exec.jar http://repo/sw/opensource/zipkin/bin/zipkin-server-$VER-exec.jar;\
  cd zipkin;\
  ln -snfv zipkin-server-$VER-exec.jar zipkin-server-exec.jar;\
  unzip -p /usr/local/zipkin/zipkin-server-exec.jar BOOT-INF/classes/info.json;

RUN set -ex;\
 (echo "info.date = $DATE";\
  echo "info.name = $REPO:$VER";\
  echo "info.from = $FROM";\
 ) > /version.d/version-$REPO.txt;

ADD scripts/[0-9]*.sh /cmd.d/
CMD ["/cmd.sh"]
